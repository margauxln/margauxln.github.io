{
  "manifest_version": 2,
  "name": "pictoChat",
  "description": "Transform all pictures of page with cat pictures",
  "version": "1.0",
  "permissions":[
    "http://*/",
    "https://*/",
    "storage"
  ],
  "icons": {
    "48": "iconchat.png"
  },

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": ["content.js"]
  }
],

"web_accessible_resources": ["images/kitten.jpg"],
"browser_action": {
  "default_icon": "iconchat.png",
  "default_title": "pictoChat",
  "default_popup": "popup.html"
}
}
